.mediatile.tile-container(class='{{ctrl.extraClass}}')
  .tile.col-sm-12.center.no-gutter(ng-class='{deactivate : ctrl.isDeleted || ctrl.isFavorited && ctrl.ifFavUndoVisible}')
    br
    span.col-sm-12.bold.no-gutter.hidden-sm-down(style="position: absolute;top: 13%;left: 0;z-index: 1;") {{ctrl.listItem.product_desc}}
    .tile-image.col-sm-12.no-gutter
      img(ng-src='{{ctrl.listItem.thumbnail_url}}', alt='img', height='100%', width='100%')
    .tile-description.col-sm-12.no-gutter.center
      span.col-sm-12.center.bold.no-gutter {{ctrl.listItem.product_name}}      
    hr  
    .tile-icon-container
      .logo.hidden-sm-down
        img(ng-src='{{ctrl.listItem.product_logo}}', alt='img', height='100%', width='100%')
      //- .logo-share(ng-if='ctrl.ifShareVisible')
      .media-favorite-container(ng-if='ctrl.ifFavoriteVisible', ng-click='ctrl.toggleFavorite()')
        button.favorite(ng-class='{active: ctrl.listItem.isFavorite}')
