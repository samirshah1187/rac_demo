.empty(ng-if="ctrl.noData")
.tile-container.col-xs-12.col-sm-12.col-md-12.col-lg-12(ng-if="!ctrl.noData")
	div.col-sm-12.filtercontainer.reset(ng-if="ctrl.ifLoadMoreVisible") 
			{{ctrl.tileData.data.length}} Results matching "laptops"
	div#list.col-sm-12.col-md-12.col-lg-12.col-xl-12.no-gutter(ng-class="{'padding-zero': ctrl.showFilter}")
		.row.reset
			producttilecomponent(id="lists{{$index}}" list-item="tile", extra-class="col-sm-6 col-md-4 col-lg-3 col-xl-3 category-tile", if-delete-visible="ctrl.ifDeleteVisible", if-fav-undo-visible="ctrl.ifFavUndoVisible", if-share-visible="true" , if-favorite-visible="true" , ng-repeat="tile in ctrl.tileData.data| limitTo: ctrl.limit")
	div#loadmore.col-sm-12.col-md-12.col-lg-12.col-xl-12.no-gutter(style="text-align: right;", ng-if="ctrl.ifLoadMoreVisible")
		a(ng-click="ctrl.loadMoreData()", ng-show="ctrl.showMore") Load More
